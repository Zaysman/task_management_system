import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalTime;
import java.time.LocalDateTime;

public class LogWriterUtility {
	
	final static private Path LogDirectory = Paths.get("logs/");
	final static private Path DatabaseLogDirectory = Paths.get(LogDirectory + "database/");
	final static private Path QueryLogDirectory = Paths.get(LogDirectory + "query/");
	
	
	
	
	public static void writeToFile() { 
		
	}
	
	
	public static void main(String[] args) {
		System.out.println(Instant.now());
		
		LocalDate currDate = LocalDate.now();
		LocalTime currTime = LocalTime.now();
		LocalDateTime currDateTime = LocalDateTime.now();
		
		System.out.println("currDate: " + currDate + "\n"
				+ "currTime: " + currTime + "\n" 
				+ "currDateTime: " + currDateTime);
	}
	
	public static LocalTime getLocalTimeWithoutNano() {
		//LocalTime time = new LocalTime(LocalTime.now().getHour(), LocalTime.now().getMinute(), LocalTime.now().getMinute(), 0);
		LocalTime time = new LocalTime(12, 30, 0, 0);
	}

