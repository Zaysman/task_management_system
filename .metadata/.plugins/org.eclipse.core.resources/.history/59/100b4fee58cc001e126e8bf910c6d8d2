	public static void printLineBreak() {

		for(int i = 0; i < 200; i++) {
			System.out.print("-");
		}
		System.out.println();
	}

	public static void printLineBreak(int dashes) {

		for(int i = 0; i < dashes; i++) {
			System.out.print("-");
		}
		System.out.println();
	}

